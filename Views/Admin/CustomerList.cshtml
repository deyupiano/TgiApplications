@model TgiApplications.ViewModels.CustomerVM
@{
    var customer = ViewBag.Customers;
    ViewBag.Title = "Customer And Staff List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
<style>
    #wrapper11, #wrapper22 {
        width: 100%;
        border: none 0px RED;
        overflow-x: scroll;
        overflow-y: hidden;
        margin: 0 auto;
    }

    #wrapper11 {
        height: 20px;
    }

    #wrapper22 {
        height: 500px;
        margin-right: 10px;
        margin-left: 10px;
    }

    #div11 {
        width: 150%;
        height: 20px;
    }

    #div22 {
        width: 150%;
        height: 500px;
        background-color: #fff;
        overflow: auto;
    }
</style>
<div class="">
    <div class="title_left">
        <h3>Customers/Staff List</h3>
    </div>

    <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search for...">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button">Go!</button>
                </span>
            </div>
        </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="x_content" id="list">
            <div id="wrapper11">
                <div id="div11"></div>
            </div>
            <div id="wrapper22" class="x_content" style="width:100%; height:570px;overflow:scroll">
                <div id="div22">
                    <table id="registrationTable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <td>ACTION</td>
                                <td>NAME</td>
                                <td>EMAIL</td>
                                <td>PHONE_NO</td>
                                <td>WHATSAPP</td>
                                <td>GENDER</td>
                                <td>DOB</td>
                                <td>PASSWORD</td>
                                <td>DETAILS</td>
                        </thead>
                        <tbody id="personList"></tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/jquery-1.11.3.min.js"></script>

}
