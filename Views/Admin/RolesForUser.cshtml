@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Roles For User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div role="main">
    <div class="page-title">
        <div class="text-center">
            <h2 style="color:#B6381F;font-size:20px;font-weight:bold">ROLE AND USER MANAGER</h2>
        </div>
    </div>
    <br />
    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div>
                <div>
                    <h3 class="text-center" style="background:#B6381F;color:white">USERS IN ROLE LIST</h3>
                    <div>
                        @using (Html.BeginForm("RolesForUser", "Admin"))
                        {
                            @Html.AntiForgeryToken()
                            <p>
                                @*Username : @Html.TextBox("UserName")*@
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.Label("Select User", new { @class = "col-md-4 control-label" })
                                        <div class="col-md-8">
                                            @Html.DropDownList("UserName", null, new { @class = "form-control" })
                                            <br/>
                                            <span><input class="btn btn-success" type="submit" value="Get Roles for this User" /></span>
                                        </div>

                                    </div>
                                </div>

                            </p>
                        }

                        @if (ViewBag.RolesForThisUser != null)
                        {
                            <div style="background-color:antiquewhite; color:#B6381F; padding-left:20px">
                                <h3>Roles for this user </h3>
                                <ol>
                                    @foreach (string s in ViewBag.RolesForThisUser)
                                    {
                                        <li style="font-size:15px">@s</li>
                                    }
                                </ol>
                            </div>
                        }

                    </div>
                    <div>
                        @if (ViewBag.R != null)
                        {
                            <div style="background-color:antiquewhite; color:#B6381F; padding-left:20px">
                                <h3>Available Roles </h3>
                                <ol>
                                    @foreach (string s in ViewBag.R)
                                    {
                                        <li style="font-size:15px">@s</li>
                                    }
                                </ol>
                            </div>
                        }
                    </div>
                    <div class="text-left" style="background:#B6381F;">
                        <h3 style="color:#B6381F"></h3>
                    </div>
                </div>
                <div>
                    <h3 class="text-center" style="background:#B6381F;color:white">MANAGE ROLE</h3>
                    <section class="col-sm-4 btn btn-success" style="font-size:15px;display:block;height:auto;width:300px;color:white">
                        @Html.ActionLink("Create Role", "CreateRole", "Admin", null, new { Style = "color:White" })
                    </section>
                    <section class="col-sm-4 btn btn-primary" style="font-size:15px;display:block;height:auto;width:300px;color:white">
                        @Html.ActionLink("Assign Role To User", "RoleAddToUser", "Admin", null, new { Style = "color:White" })
                    </section>
                    <section class="col-sm-4 btn btn-danger" style="font-size:15px;display:block;height:auto;width:300px;color:white">
                        @Html.ActionLink("Remove User From Role", "DeleteRoleForUser", "Admin", null, new { Style = "color:White" })
                    </section>
                    <br />
                    <div class="text-left" style="background:#333333;margin-bottom:30px">
                        <h3 style="color:#B6381F"></h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
@section scripts{
    <script src="~/Scripts/jquery-1.11.3.min.js"></script>
    
}
