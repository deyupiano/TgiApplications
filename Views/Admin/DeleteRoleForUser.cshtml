@model TgiApplications.ViewModels.UsersRolesVM
@{
    ViewBag.Title = "DeleteRoleForUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Delete Role For User</h2>
<hr />
<p style="color:red;font-size:14px">@ViewBag.ResultMessage</p>
@using (Html.BeginForm("DeleteRoleForUser", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Select User", htmlAttributes: new { @class = "col-md-2 text-info font-weight-bold" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.User, ViewBag.Users as SelectList, "Select User", new { @class = "form-control", @id = "UserName" })
        </div>
    </div>
    <!--Select the role type for a user-->
    <div class="form-group">
        @Html.Label("Select Role", htmlAttributes: new { @class = "col-md-2 text-info font-weight-bold" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Role, ViewBag.Roles as SelectList, "Select Role", new { @class = "form-control", @id = "Role" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Remove" />
        </div>
    </div>
}


