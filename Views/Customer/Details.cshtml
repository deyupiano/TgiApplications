
@model TgiApplications.Models.ShoppingCart
@using TgiApplications.Extensions

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/font-awesome.min.css" rel="stylesheet" />
<style>

    .backgroundWhite {
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        margin-bottom: 30px;
    }

    .backgroundWhiteBorder {
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        margin-bottom: 30px;
        border: 1px solid #ddd;
    }

    .backgroundWhiteBorder10Padding {
        background-color: white;
        padding: 10px;
        border-radius: 10px;
        border: 1px solid #ddd;
    }

    .menu-filter-list li {
        display: inline-block;
        cursor: pointer;
        padding: 10px 20px 10px;
        text-transform: uppercase;
        background: #f5f5f5;
        border-radius: 5px;
        font-weight: 700;
        font-size: 13px;
        -moz-transition: all 0.3s;
        -o-transition: all 0.3s;
        -webkit-transition: all 0.3s;
        transition: all 0.3s;
        font-family: "Poppins",sans-serif;
    }

        .menu-filter-list li.is-checke, .menu-filter-list li:hover {
            background-color: #545b62;
            color: #fff;
        }
</style>
<br />
<h2 class="text-info">Service Details</h2>
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="border backgroundWhite row">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="col-12 pb-4 d-md-none">
            <img src="~/UploadedImages/@Model.Service.Image" width="100%" style="border-radius:5px;border: 1px solid #bbb9b9;" />
        </div>
        <br />
        <div class="col-md-8">
            <div class="form-group row">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.Service.ServiceName, htmlAttributes: new { @class = "text-info font-weight-bold" })
                </div>
                <div class="col-md-8">
                    <div class="border p-2">
                        @Html.Raw(Model.Service.ServiceName)
                    </div>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.Service.ServiceDescription, htmlAttributes: new { @class = "text-info font-weight-bold" })
                </div>
                <div class="col-md-8">
                    <div class="border p-2">
                        @Html.Raw(Model.Service.ServiceDescription)
                    </div>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.Service.ServiceCategoryId, htmlAttributes: new { @class = "text-info font-weight-bold" })
                </div>
                <div class="col-md-8">
                    <div class="border p-2">
                        @Html.Raw(Model.Service.ServiceCategory.ServiceCategoryName)
                    </div>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.Service.Item.ItemId, htmlAttributes: new { @class = "text-info font-weight-bold" })
                </div>
                <div class="col-md-8">
                    <div class="border p-2">
                        @Html.Raw(Model.Service.Item.ItemName)
                    </div>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.Count, htmlAttributes: new { @class = "text-info font-weight-bold" })
                </div>
                <div class="col-md-8">
                    <div class="border p-2">
                        @Html.EditorFor(model => model.Count, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.Service.Price, htmlAttributes: new { @class = "text-info font-weight-bold" })
                </div>
                <div class="col-md-8">
                    <div class="border p-2">
                        @Html.Raw(Model.Service.Price)
                    </div>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-md-4">
                </div>
                <div class="col-md-4">
                    <a href="/Admin/Index" class="btn btn-success form-control">Back to List</a> 
                </div>
                <div class="col-md-4">
                    <button type="submit" value="Add to Cart" class="btn btn-primary form-control">Add to Cart</button>
                </div>
            </div>
            <br />
        </div>
        <div class="col-md-3 offset-1 d-none d-md-block">
            <img src="~/UploadedImages/@Model.Service.Image" width="100%" style="border-radius:5px;border: 1px solid #bbb9b9;" />
        </div>



    </div>
    @Html.HiddenFor(model => model.ServiceId, new { htmlAttributes = new { @id = "ServiceId", @name = "ServiceId" } })
}


@section Scripts{
    <script src="~/Scripts/jquery-1.11.3.min.js"></script>

}