@model TgiApplications.Models.RegisterModel
@{
    ViewBag.Title = "Assign Role To Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/ddl.css" rel="stylesheet" />
<div class="right_col" role="main">
    <div class="page-title">
        <div class="text-center">
            <h2 style="color:black">Available Roles For Application</h2>
        </div>
    </div>
    <br />
    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title" style="border:solid 2px deeppink">
                    <div class="text-center" style="background:#333333;margin-top:35px ">
                        <h3 style="color:deeppink">ASSIGN USER TO ROLE</h3>
                    </div>
                    @using (Html.BeginForm("RegisterRole", "Roles", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <hr />
                        @*@Html.ValidationSummary("", new { @class = "text-danger" })*@
                        <div class="form-group">
                            @Html.Label("Select User", new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.DropDownList("UserName", null, new { @class = "ddl" })
                            </div>
                        </div>
                         <!--Select the role type for a user-->
                        <div class="form-group">
                            @Html.Label("Select Role", new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.DropDownList("Name", null, new { @class = "ddl" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" class="btn btn-default" value="Register" />
                            </div>
                        </div>
                    }
                    <div class="text-left" style="background:#333333;margin-bottom:30px">
                        <h3 style="color:#333333">N</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- /page content -->
