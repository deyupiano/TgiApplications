@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/ddl.css" rel="stylesheet" />
<div class="right_col" role="main">
    <div class="page-title">
        <div class="text-center">
            <h2 style="color:black">ROLE AND USER MANAGER</h2>
        </div>
    </div>
    <br />
    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div @*class="x_title"*@ style="border:solid 2px deeppink">
                    <div class="text-center" style="background:#333333 ">
                        <h3 style="color:deeppink">USERS IN ROLE LIST</h3>
                    </div>
                    <div>
                        @using (Html.BeginForm("Index", "Roles"))
                        {
                            @Html.AntiForgeryToken()
                            <p>
                                @*Username : @Html.TextBox("UserName")*@
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.Label("Select User", new { @class = "col-md-4 control-label" })
                                        <div class="col-md-8">
                                            @Html.DropDownList("UserName", null, new { @class = "ddl" })

                                            <span><input class="btn btn-success" type="submit" value="Get Roles for this User" /></span>
                                        </div>

                                    </div>
                                </div>

                            </p>
                        }
                        <br />
                        @if (ViewBag.RolesForThisUser != null)
                        {
                            <div style="background-color:yellow; color:deeppink; padding-left:20px">
                                <h3>Roles for this user </h3>
                                <ol>
                                    @foreach (string s in ViewBag.RolesForThisUser)
                                    {
                                        <li>@s</li>
                                    }
                                </ol>
                            </div>
                        }
                    </div>
                    <div>
                        @if (ViewBag.R != null)
                        {
                            <div style="background-color:yellow; color:deeppink; padding-left:20px">
                                <h3>Available Roles </h3>
                                <ol>
                                    @foreach (string s in ViewBag.R)
                                    {
                                        <li>@s</li>
                                    }
                                </ol>
                            </div>
                        }
                    </div>
                    <div class="text-left" style="background:#333333;margin-bottom:30px">
                        <h3 style="color:#333333">N</h3>
                    </div>
                </div>
                <div @*class="x_title"*@ style="border:solid 2px deeppink">
                    <div class="text-center" style="background:#333333">
                        <h3 style="color:deeppink">MANAGE ROLE</h3>
                    </div>
                    <section class="col-sm-4">
                        <table class="table-bordered">
                            @Html.ActionLink("Create Role", "Create", "Roles")
                        </table>
                    </section>
                    <section class="col-sm-4">
                        <table class="table-bordered">
                            @Html.ActionLink("Assign Role To User", "RegisterRole", "Roles")
                        </table>
                    </section>
                    <section class="col-sm-4">
                        <table class="table-bordered">
                            @Html.ActionLink("Remove User From Role", "DeleteRoleForUser", "Roles")
                        </table>
                    </section>
                    <br />
                    <div class="text-left" style="background:#333333;margin-bottom:30px">
                        <h3 style="color:#333333">N</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- /page content -->
