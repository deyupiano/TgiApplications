
@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Create Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    #tbrole, .c {
        border: double;
    }
</style>


<div class="right_col" role="main">
    <div class="page-title">
        <div class="text-center">
            <h2 style="color:black">Role Management</h2>
        </div>
    </div>
    <br />
    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title" style="border:solid 2px deeppink">
                    <div class="text-center" style="background:#333333;margin-top:35px ">
                        <h3 style="color:deeppink">CREATE ROLE</h3>
                    </div>
                    @using (Html.BeginForm())
                    {
                        <table class="table table-bordered table-hover">
                            <tr>
                                <td class="c">Enter Role Name To Be Created:</td>
                                <td class="c">
                                    @Html.EditorFor(m => m.Name)
                                </td>
                            </tr>
                        </table>
                        <input class="btn btn-success" type="submit" value="Create Role" />
                    }
                    <div class="text-left" style="background:#333333;margin-bottom:30px">
                        <h3 style="color:deeppink">Available Roles</h3>
                    </div>

                    @if (ViewBag.Roles != null)
                    {
                        <div style="background-color:yellow;">
                            <ol>
                                @foreach (string r in ViewBag.Roles)
                                {
                                    <li>@r</li>
                                }
                            </ol>
                        </div>
                    }
                    <div class="text-left" style="background:#333333;margin-bottom:30px">
                        <h3 style="color:#333333">N</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
